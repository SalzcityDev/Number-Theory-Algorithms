''' Algoritmo Extendido de Euclides
'''

def eea(x,y):
    a= [1,0,abs(x)]
    b= [0,1,abs(y)]
    
    if a[2]<b[2]:
        a[2],b[2] = b[2],a[2]
        
    while b[2]!=0:
        m= a[2]//b[2]
        for i in range(3):
            r = a[i]-m*b[i]
            a[i]=b[i]
            b[i]= r

    if abs(x)<abs(y):
        a[0],a[1]= a[1], a[0]
    if x == -abs(x):
        a[0] = -a[0]   
    if y == -abs(y):
        a[1] = -a[1]   
    
    return (a[2],a[0],a[1])
